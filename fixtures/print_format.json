[
    {
        "doctype": "Print Format",
        "name": "Loan Agreement",
        "doc_type": "Loan",
        "title": "Loan Agreement",
        "html": "<div style='font-family: Arial, sans-serif; max-width: 900px; margin: 0 auto; padding: 20px;'>\n    <div style='text-align: center; margin-bottom: 30px;'>\n        <h1>LOAN AGREEMENT</h1>\n        <p style='color: #666;'>Microfinance Loan Agreement Form</p>\n    </div>\n\n    <div style='margin-bottom: 20px;'>\n        <h3>AGREEMENT DETAILS</h3>\n        <table style='width: 100%; border-collapse: collapse;'>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd; width: 50%;'><strong>Loan ID:</strong> {{ doc.name }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Issue Date:</strong> {{ doc.modified or 'N/A' }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Company:</strong> {{ doc.company }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Branch:</strong> {{ doc.branch or 'N/A' }}</td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-bottom: 20px;'>\n        <h3>BORROWER INFORMATION</h3>\n        <table style='width: 100%; border-collapse: collapse;'>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd; width: 50%;'><strong>Borrower:</strong> {{ doc.borrower }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Customer:</strong> {{ doc.customer }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Employment Type:</strong> {{ doc.employment_type or 'N/A' }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Annual Income:</strong> {{ doc.annual_income or 'N/A' }}</td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-bottom: 20px;'>\n        <h3>LOAN TERMS & CONDITIONS</h3>\n        <table style='width: 100%; border-collapse: collapse;'>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd; width: 50%;'><strong>Loan Product:</strong> {{ doc.loan_product }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Application Date:</strong> {{ doc.application_date }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Requested Amount:</strong> {{ '{:,.2f}'.format(doc.requested_amount) if doc.requested_amount else 'N/A' }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Approved Amount:</strong> {{ '{:,.2f}'.format(doc.approved_amount) if doc.approved_amount else 'N/A' }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Interest Rate:</strong> {{ doc.interest_rate or 'N/A' }}% per annum</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Tenure:</strong> {{ doc.tenure_months or 'N/A' }} months</td>\n            </tr>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Interest Calculation:</strong> {{ doc.interest_calculation_method or 'N/A' }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Repayment Frequency:</strong> {{ doc.repayment_frequency or 'Monthly' }}</td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-bottom: 20px;'>\n        <h3>LOAN STATUS</h3>\n        <table style='width: 100%; border-collapse: collapse;'>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd; width: 50%;'><strong>Status:</strong> {{ doc.status }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Workflow State:</strong> {{ doc.workflow_state or 'N/A' }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Disbursement Date:</strong> {{ doc.disbursement_date or 'Pending' }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Disbursed Amount:</strong> {{ '{:,.2f}'.format(doc.disbursed_amount) if doc.disbursed_amount else 'Pending' }}</td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-top: 40px; padding-top: 20px; border-top: 2px solid #333;'>\n        <h3>TERMS & ACKNOWLEDGMENT</h3>\n        <p style='line-height: 1.6; text-align: justify;'>\n            The Borrower hereby acknowledges and agrees to the terms and conditions of this Loan Agreement. The Borrower understands and accepts the interest rate, tenure, and repayment obligations as outlined above. All payments must be made on or before the due dates as specified in the Repayment Schedule. Late payments will incur penalties as per the company's policy.\n        </p>\n        <p style='line-height: 1.6; text-align: justify;'>\n            The Borrower further acknowledges that they have received a copy of this agreement and the associated Repayment Schedule, and that they fully understand all terms and conditions.\n        </p>\n    </div>\n\n    <div style='margin-top: 40px; text-align: center;'>\n        <p style='margin-top: 60px;'>\n            <strong>Borrower Signature: _______________________</strong><br/>\n            <span style='font-size: 12px;'>Date: {{ '{:}'.format(doc.modified.date()) if doc.modified else 'N/A' }}</span>\n        </p>\n    </div>\n</div>",
        "standard": "No",
        "disabled": 0,
        "print_format_type": "Jinja"
    },
    {
        "doctype": "Print Format",
        "name": "Repayment Schedule",
        "doc_type": "Repayment Schedule",
        "title": "Repayment Schedule",
        "html": "<div style='font-family: Arial, sans-serif; max-width: 1000px; margin: 0 auto; padding: 20px;'>\n    <div style='text-align: center; margin-bottom: 30px;'>\n        <h1>REPAYMENT SCHEDULE</h1>\n        <p style='color: #666;'>Detailed payment schedule for loan repayment</p>\n    </div>\n\n    <div style='margin-bottom: 20px;'>\n        <h3>LOAN INFORMATION</h3>\n        <table style='width: 100%; border-collapse: collapse;'>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd; width: 50%;'><strong>Loan ID:</strong> {{ doc.loan }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Schedule ID:</strong> {{ doc.name }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Borrower:</strong> {{ doc.borrower }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Company:</strong> {{ doc.company }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Currency:</strong> {{ doc.currency or 'N/A' }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Status:</strong> {{ doc.status }}</td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-bottom: 20px;'>\n        <h3>TOTAL AMOUNTS</h3>\n        <table style='width: 100%; border-collapse: collapse;'>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd; width: 25%;'><strong>Total Principal:</strong> {{ '{:,.2f}'.format(doc.total_principal) if doc.total_principal else '0.00' }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd; width: 25%;'><strong>Total Interest:</strong> {{ '{:,.2f}'.format(doc.total_interest) if doc.total_interest else '0.00' }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd; width: 25%;'><strong>Total Amount:</strong> {{ '{:,.2f}'.format(doc.total_amount) if doc.total_amount else '0.00' }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd; width: 25%;'><strong>Total Outstanding:</strong> {{ '{:,.2f}'.format(doc.total_outstanding) if doc.total_outstanding else '0.00' }}</td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-bottom: 20px;'>\n        <h3>REPAYMENT SCHEDULE DETAILS</h3>\n        <table style='width: 100%; border-collapse: collapse; font-size: 12px;'>\n            <thead>\n                <tr style='background-color: #f5f5f5;'>\n                    <th style='padding: 10px; border: 1px solid #ddd; text-align: left;'>#</th>\n                    <th style='padding: 10px; border: 1px solid #ddd; text-align: center;'>Due Date</th>\n                    <th style='padding: 10px; border: 1px solid #ddd; text-align: right;'>Principal</th>\n                    <th style='padding: 10px; border: 1px solid #ddd; text-align: right;'>Interest</th>\n                    <th style='padding: 10px; border: 1px solid #ddd; text-align: right;'>Penalty</th>\n                    <th style='padding: 10px; border: 1px solid #ddd; text-align: right;'>Total Due</th>\n                    <th style='padding: 10px; border: 1px solid #ddd; text-align: right;'>Status</th>\n                </tr>\n            </thead>\n            <tbody>\n                {% for item in doc.schedule_entries %}\n                <tr>\n                    <td style='padding: 8px; border: 1px solid #ddd;'>{{ loop.index }}</td>\n                    <td style='padding: 8px; border: 1px solid #ddd; text-align: center;'>{{ item.due_date.strftime('%Y-%m-%d') if item.due_date else 'N/A' }}</td>\n                    <td style='padding: 8px; border: 1px solid #ddd; text-align: right;'>{{ '{:,.2f}'.format(item.principal_amount) if item.principal_amount else '0.00' }}</td>\n                    <td style='padding: 8px; border: 1px solid #ddd; text-align: right;'>{{ '{:,.2f}'.format(item.interest_amount) if item.interest_amount else '0.00' }}</td>\n                    <td style='padding: 8px; border: 1px solid #ddd; text-align: right;'>{{ '{:,.2f}'.format(item.penalty_amount or 0) }}</td>\n                    <td style='padding: 8px; border: 1px solid #ddd; text-align: right; font-weight: bold;'>{{ '{:,.2f}'.format(item.total_amount) if item.total_amount else '0.00' }}</td>\n                    <td style='padding: 8px; border: 1px solid #ddd; text-align: center;'><span style='padding: 3px 8px; background-color: {% if item.status == \"Paid\" %}#d4edda{% elif item.status == \"Pending\" %}#fff3cd{% else %}#f8d7da{% endif %}; color: inherit; border-radius: 3px;'>{{ item.status }}</span></td>\n                </tr>\n                {% endfor %}\n            </tbody>\n        </table>\n    </div>\n\n    <div style='margin-top: 40px; padding: 20px; background-color: #f9f9f9; border-left: 4px solid #007bff;'>\n        <h4>PAYMENT INSTRUCTIONS</h4>\n        <ul style='line-height: 1.8;'>\n            <li>All payments must be made by the due date specified in the schedule above.</li>\n            <li>Late payments will incur penalties as per the loan agreement.</li>\n            <li>Make payment to the designated company bank account.</li>\n            <li>Keep proof of payment for your records.</li>\n            <li>Contact the loan officer for any payment concerns or inquiries.</li>\n        </ul>\n    </div>\n</div>",
        "standard": "No",
        "disabled": 0,
        "print_format_type": "Jinja"
    },
    {
        "doctype": "Print Format",
        "name": "Payment Receipt",
        "doc_type": "Loan Repayment",
        "title": "Payment Receipt",
        "html": "<div style='font-family: Arial, sans-serif; max-width: 800px; margin: 0 auto; padding: 20px;'>\n    <div style='text-align: center; margin-bottom: 30px; padding-bottom: 20px; border-bottom: 3px solid #333;'>\n        <h1 style='margin: 0;'>PAYMENT RECEIPT</h1>\n        <p style='color: #666; margin: 5px 0;'>Official Receipt for Loan Repayment</p>\n        <p style='font-weight: bold; margin-top: 10px;'>Receipt No: {{ doc.name }}</p>\n    </div>\n\n    <div style='margin-bottom: 20px;'>\n        <h3>PAYMENT DETAILS</h3>\n        <table style='width: 100%; border-collapse: collapse;'>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd; width: 50%;'><strong>Loan ID:</strong> {{ doc.loan }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Payment Date:</strong> {{ doc.payment_date }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Borrower:</strong> {{ doc.borrower }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Payment Status:</strong> <span style='color: green; font-weight: bold;'>{{ doc.status }}</span></td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-bottom: 30px;'>\n        <h3>PAYMENT BREAKDOWN</h3>\n        <table style='width: 100%; border-collapse: collapse;'>\n            <tr style='background-color: #f5f5f5;'>\n                <td style='padding: 12px; border: 1px solid #ddd; font-weight: bold;'>Component</td>\n                <td style='padding: 12px; border: 1px solid #ddd; font-weight: bold; text-align: right;'>Amount</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; border: 1px solid #ddd;'>Principal Repayment</td>\n                <td style='padding: 10px; border: 1px solid #ddd; text-align: right;'>{{ '{:,.2f}'.format(doc.principal_amount) if doc.principal_amount else '0.00' }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; border: 1px solid #ddd;'>Interest Payment</td>\n                <td style='padding: 10px; border: 1px solid #ddd; text-align: right;'>{{ '{:,.2f}'.format(doc.interest_amount) if doc.interest_amount else '0.00' }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; border: 1px solid #ddd;'>Penalty/Late Fees</td>\n                <td style='padding: 10px; border: 1px solid #ddd; text-align: right;'>{{ '{:,.2f}'.format(doc.penalty_amount or 0) }}</td>\n            </tr>\n            <tr style='background-color: #f0f0f0; font-weight: bold; font-size: 14px;'>\n                <td style='padding: 12px; border: 2px solid #333;'>TOTAL PAYMENT</td>\n                <td style='padding: 12px; border: 2px solid #333; text-align: right;'>{{ '{:,.2f}'.format(doc.total_payment_amount) if doc.total_payment_amount else '0.00' }}</td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-bottom: 20px;'>\n        <h3>TRANSACTION DETAILS</h3>\n        <table style='width: 100%; border-collapse: collapse;'>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd; width: 50%;'><strong>Bank Account:</strong> {{ doc.bank_account }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Mode of Payment:</strong> {{ doc.mode_of_payment or 'Not Specified' }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Reference Number:</strong> {{ doc.reference_number or 'N/A' }}</td>\n                <td style='padding: 8px; border-bottom: 1px solid #ddd;'><strong>Posting Date:</strong> {{ doc.posting_date }}</td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-top: 40px; padding: 20px; background-color: #f9f9f9; border: 1px solid #ddd; text-align: center;'>\n        <p style='margin: 0; color: #666;'><em>This is an official receipt. Please keep this for your records.</em></p>\n        <p style='margin: 10px 0 0 0; color: #666; font-size: 12px;'>Generated on: {{ doc.modified }}</p>\n    </div>\n\n    {% if doc.remarks %}\n    <div style='margin-top: 20px; padding: 15px; background-color: #fffbea; border-left: 4px solid #ffc107;'>\n        <h4 style='margin-top: 0;'>REMARKS</h4>\n        <p style='margin: 0;'>{{ doc.remarks }}</p>\n    </div>\n    {% endif %}\n</div>",
        "standard": "No",
        "disabled": 0,
        "print_format_type": "Jinja"
    },
    {
        "doctype": "Print Format",
        "name": "Loan Closure Certificate",
        "doc_type": "Loan",
        "title": "Loan Closure Certificate",
        "html": "<div style='font-family: Arial, sans-serif; max-width: 900px; margin: 0 auto; padding: 30px;'>\n    <div style='text-align: center; margin-bottom: 40px; padding-bottom: 30px; border-bottom: 3px solid #333;'>\n        <h1 style='margin: 0; font-size: 28px;'>LOAN CLOSURE CERTIFICATE</h1>\n        <p style='color: #666; margin: 10px 0; font-size: 14px;'>Official Certificate of Loan Completion</p>\n    </div>\n\n    <div style='margin-bottom: 30px;'>\n        <p style='line-height: 1.8; text-align: justify;'>\n            This is to certify that the loan mentioned below has been fully repaid and closed as per the terms and conditions of the Loan Agreement.\n        </p>\n    </div>\n\n    <div style='margin-bottom: 30px;'>\n        <h3 style='color: #333; border-bottom: 2px solid #007bff; padding-bottom: 10px;'>LOAN INFORMATION</h3>\n        <table style='width: 100%; border-collapse: collapse; margin-top: 15px;'>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Loan ID:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ doc.name }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Borrower Name:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ doc.borrower }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Customer ID:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ doc.customer }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Branch:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ doc.branch or 'N/A' }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Company:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ doc.company }}</td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-bottom: 30px;'>\n        <h3 style='color: #333; border-bottom: 2px solid #007bff; padding-bottom: 10px;'>LOAN TERMS</h3>\n        <table style='width: 100%; border-collapse: collapse; margin-top: 15px;'>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Loan Product:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ doc.loan_product }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Approved Amount:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ '{:,.2f}'.format(doc.approved_amount) if doc.approved_amount else 'N/A' }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Interest Rate:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ doc.interest_rate or 'N/A' }}% per annum</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Tenure:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ doc.tenure_months or 'N/A' }} months</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Disbursement Date:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ doc.disbursement_date or 'N/A' }}</td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-bottom: 30px;'>\n        <h3 style='color: #333; border-bottom: 2px solid #007bff; padding-bottom: 10px;'>REPAYMENT SUMMARY</h3>\n        <table style='width: 100%; border-collapse: collapse; margin-top: 15px;'>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Total Principal Repaid:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ '{:,.2f}'.format(doc.approved_amount) if doc.approved_amount else 'N/A' }}</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Total Interest Paid:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>Calculated from repayment schedule</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Outstanding Amount:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>0.00</td>\n            </tr>\n            <tr>\n                <td style='padding: 10px; width: 50%; border-bottom: 1px solid #ddd;'><strong>Closure Date:</strong></td>\n                <td style='padding: 10px; border-bottom: 1px solid #ddd;'>{{ doc.closure_date or doc.modified }}</td>\n            </tr>\n        </table>\n    </div>\n\n    <div style='margin-bottom: 30px; padding: 20px; background-color: #d4edda; border: 1px solid #c3e6cb; border-radius: 4px;'>\n        <p style='margin: 0; color: #155724; text-align: center; font-weight: bold; font-size: 16px;'>\n            âœ“ LOAN FULLY REPAID AND CLOSED\n        </p>\n    </div>\n\n    <div style='margin-top: 40px; padding-top: 20px; border-top: 2px solid #ddd;'>\n        <p style='line-height: 1.8; text-align: justify;'>\n            This certificate confirms that the borrower has fulfilled all obligations under the Loan Agreement. All principal, interest, and any applicable charges have been paid in full. The loan is now closed and the borrower is released from all future payment obligations related to this loan.\n        </p>\n    </div>\n\n    <div style='margin-top: 50px; display: flex; justify-content: space-between; align-items: flex-end;'>\n        <div style='text-align: center;'>\n            <p style='margin: 50px 0 0 0; border-top: 2px solid #333; padding-top: 10px;'>\n                <strong>Authorized Signature</strong><br/>\n                <span style='font-size: 12px;'>Branch Manager / Finance Officer</span>\n            </p>\n        </div>\n        <div style='text-align: center;'>\n            <p style='margin: 0; color: #666; font-size: 12px;'>Generated on: {{ doc.modified }}</p>\n        </div>\n    </div>\n</div>",
        "standard": "No",
        "disabled": 0,
        "print_format_type": "Jinja"
    }
]